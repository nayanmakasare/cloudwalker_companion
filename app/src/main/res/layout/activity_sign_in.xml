<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignInActivity"
    android:background="@color/primaryBackgroundColor">

    <ImageView
        android:id="@+id/sign_in_button"
        android:layout_width="180dp"
        android:layout_height="55dp"
        android:visibility="invisible"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="400dp"
        android:src="@drawable/google_signin_button"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/signInmessage"
        android:text="Sign in/ Register"
        android:textColor="@color/primaryTextColor"
        android:textSize="32sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/signInSubMessage"
        android:text="Please Sign in or Register via your google account to create a CloudTV profile"
        android:textColor="@color/primaryTextColor"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/signInmessage"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        android:textAlignment="center"/>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:ls="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/mainBg"
        tools:context=".CwIntermideateActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="@string/completeProfileMessageString"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="56.7dp"
            android:layout_marginStart="9.7dp"
            android:layout_marginEnd="9dp"
            android:fontFamily="@font/avenirnext_medium"
            android:textAlignment="center"
            android:textColor="@color/profileString"
            android:id="@+id/completeProfileMessageTV" />


        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="63dp"
            android:layout_height="63dp"
            android:layout_below="@id/completeProfileMessageTV"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="29.3dp"
            android:id="@+id/profileImageView"
            android:src="@drawable/cw_icon"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="65.5dp"
            android:paddingBottom="15dp"
            android:layout_marginEnd="65.5dp"
            android:layout_marginTop="22.7dp"
            android:textColor="#ffffff"
            android:fontFamily="@font/avenirnext_medium"
            android:textSize="13.3sp"
            android:letterSpacing="0.01"
            android:id="@+id/userNameET"
            android:hint="User Name"
            android:textColorHint="#ffffff"
            android:inputType="textShortMessage"
            android:singleLine="true"
            android:layout_below="@id/profileImageView"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="65.5dp"
            android:layout_marginEnd="65.5dp"
            android:layout_marginTop="22.7dp"
            android:paddingBottom="15dp"
            android:textColor="#ffffff"
            android:textSize="13.3sp"
            android:letterSpacing="0.01"
            android:fontFamily="@font/avenirnext_medium"
            android:id="@+id/emailET"
            android:editable="false"
            android:focusable="false"
            android:clickable="false"
            android:text="nayanmakasare94@gmail.com"
            android:inputType="textEmailAddress"
            android:layout_below="@id/userNameET"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="65.5dp"
            android:paddingBottom="15dp"
            android:layout_marginEnd="65.5dp"
            android:layout_marginTop="22.7dp"
            android:textColor="#ffffff"
            android:textSize="13.3sp"
            android:letterSpacing="0.01"
            android:fontFamily="@font/avenirnext_medium"
            android:id="@+id/mobileET"
            android:hint="Mobile Number"
            android:textColorHint="#ffffff"
            android:inputType="number"
            android:layout_below="@id/emailET"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="65.5dp"
            android:paddingBottom="15dp"
            android:layout_marginEnd="65.5dp"
            android:layout_marginTop="22.7dp"
            android:textColor="#ffffff"
            android:textSize="13.3sp"
            android:letterSpacing="0.01"
            android:fontFamily="@font/avenirnext_medium"
            android:id="@+id/dobET"
            android:editable="false"
            android:focusable="false"
            android:clickable="false"
            android:hint="Date of birth"
            android:textColorHint="#ffffff"
            android:inputType="number"
            android:layout_below="@id/mobileET"/>


        <Button
            android:layout_width="150.7dp"
            android:layout_height="46dp"
            android:background="#0096ff"
            android:text="Next"
            android:textColor="#ffffff"
            android:textSize="13.3sp"
            android:letterSpacing="0.01"
            android:fontFamily="@font/avenirnext_medium"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="107.3dp"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/nextButton"
            android:textAllCaps="false"
            style="@style/Base.TextAppearance.AppCompat"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:textSize="10sp"
            android:layout_marginBottom="25.7dp"
            android:textColor="#de898989"
            tools:text="By logging in you agree to CloudWalkerâ€™s Terms &amp; Conditions and Privacy Policy."
            android:layout_alignParentBottom="true"
            android:textAlignment="center"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

</layout>